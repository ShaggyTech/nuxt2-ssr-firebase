{
  "name": "Nuxt-SSR-Firebase",
  "version": "2.0.0",
  "description": "Nuxt.js 2 app with SSR using Firebase Cloud Functions and Firebase Hosting.",
  "license": "MIT",
  "author": "David Royer",
  "repository": "https://github.com/davidroyer/nuxt-ssr-firebase",
  "scripts": {
    "dev": "cd \"src\" && yarn dev",
    "build": "yarn cleannuxt && yarn build:nuxt && yarn clean && yarn copyassets",
    "serve": "firebase serve",
    "deploy": "firebase deploy",
    "predeploy": "yarn build",
    "setup": "yarn install && yarn setup:client && yarn setup:server",
    "setup:client": "cd \"src\" && yarn install",
    "setup:server": "cd \"prod/server\" && yarn install",
    "copyassets": "yarn copyclient && yarn copynuxtconfig && yarn copystatic && yarn copyworkbox",
    "copyworkbox": "cp -R node_modules/workbox-cdn/workbox prod/client",
    "copyclient": "cp -R src/dist/* prod/client",
    "copystatic": "cp -R src/static prod/server/nuxt/dist/client",
    "copynuxtconfig": "cp -R src/nuxt.config.js prod/server",
    "clean": "yarn cleanprod",
    "cleanprod": "rimraf prod/client/* && rimraf prod/server/nuxt.config.js",
    "cleannuxt": "rimraf src/dist && rimraf prod/server/nuxt",
    "build:nuxt": "cd \"src\" && yarn build && yarn generate"
  },
  "devDependencies": {
    "cross-env": "^6.0.0",
    "rimraf": "^3.0.0",
    "workbox-cdn": "^4.3.1"
  },
  "dependencies": {}
}
